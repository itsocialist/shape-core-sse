{
  "name": "@briandawson/shape-core-sse",
  "version": "0.4.0",
  "description": "Ship APE Core SSE - Multi-tenant MCP server with HTTP/SSE transport for Claude Web/Mobile",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:basic": "SHAPE_BASIC_MODE=true node dist/index.js",
    "start:sse": "SHAPE_SSE_MODE=true node dist/index.js",
    "dev": "tsx src/index.ts",
    "dev:basic": "SHAPE_BASIC_MODE=true tsx src/index.ts",
    "dev:sse": "SHAPE_SSE_MODE=true tsx src/index.ts",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:unit": "NODE_OPTIONS='--experimental-vm-modules' jest --testPathPattern=unit",
    "test:integration": "npm run build && NODE_OPTIONS='--experimental-vm-modules' jest --testPathPattern=integration",
    "test:e2e": "npm run build && NODE_OPTIONS='--experimental-vm-modules' jest --testPathPattern=e2e",
    "test:performance": "npm run build && NODE_OPTIONS='--experimental-vm-modules' jest --testPathPattern=performance --verbose",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:performance",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test:mocked": "node scripts/test-mcp.js",
    "test:real-mcp": "node scripts/test-mcp.js --real-mcp",
    "test:adapter": "node scripts/test-mcp.js",
    "optimize-memory": "tsx scripts/optimize-memory.ts",
    "optimize-memory:dry-run": "tsx scripts/optimize-memory.ts --dry-run",
    "optimize-memory:export": "tsx scripts/export-context.ts",
    "analyze-context": "tsx scripts/analyze-context.ts",
    "list-context": "tsx scripts/list-context.ts",
    "visualize-graph": "tsx scripts/visualize-graph.ts",
    "visualize-timeline": "tsx scripts/visualize-timeline.ts",
    "perf:baseline": "npm run test:performance && cp performance-results/baseline.json performance-baseline.json",
    "perf:compare": "tsx tests/performance/performance-compare.ts",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "prepare": "npm run build || echo 'Build skipped in production'"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "context-memory",
    "project-management",
    "roles",
    "team-collaboration",
    "sse",
    "http-transport",
    "multi-tenant",
    "claude-web",
    "claude-mobile"
  ],
  "author": "Brian Dawson",
  "license": "MIT",
  "dependencies": {
    "@cyanheads/git-mcp-server": "^2.1.4",
    "@modelcontextprotocol/sdk": "^1.13.1",
    "better-sqlite3": "^12.2.0",
    "uuid": "^11.1.0",
    "zod": "^3.22.4",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "rate-limiter-flexible": "^4.0.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.2",
    "@types/better-sqlite3": "^7.6.8",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "fs-extra": "^11.3.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0 <24.0.0",
    "npm": ">=8.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ]
}
