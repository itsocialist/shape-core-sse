{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE"
  },
  "regions": ["us-west1"],
  "variables": {
    "NODE_ENV": "production",
    "SHAPE_SSE_MODE": "true",
    "PORT": "3000",
    "SHIP_APE_MASTER_KEY": "${{SHIP_APE_MASTER_KEY}}",
    "CORS_ORIGINS": "https://claude.ai,https://web.claude.ai",
    "TENANT_DATA_PATH": "/app/tenant-data",
    "DATABASE_ENCRYPTION": "false",
    "ENABLE_REQUEST_LOGGING": "true",
    "LOG_LEVEL": "info"
  },
  "services": [
    {
      "name": "ship-ape-core-sse",
      "source": {
        "type": "image",
        "image": "ship-ape-core-sse:latest"
      }
    }
  ]
}